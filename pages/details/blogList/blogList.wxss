/*顶部样式  */
.userInfo{
  width: 100%;
  height: 180rpx;
  background: #409eff;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  align-items: center;
}
.user-left{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: 20rpx;
}
.user-right{
  padding: 20rpx 0;
  margin-left: 30rpx;
}
.nickName{
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.progressBar{
  width: 200rpx;
}
.progressBar-mask{
  font-family: "微软雅黑";
  font-weight: lighter;
  background-Color: 409eff;
  width: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.capacity{
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
}
/*文集和博客导航  */
.menu{
  width: 100%;
  padding: 20rpx 0;
  height: 60rpx;
  flex-direction: row;
  justify-content: center;
  display: flex;
  position: fixed;
  left: 0;
  top: 180rpx;
  z-index: 1000;
  background: #fff;
}
.articleList{
  margin-top: 280rpx;
}
.groups{
  text-align: center;
  width: 40%;
  font-size: 32rpx;
  height: 60rpx;
  display: flex;
  align-items:center ;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  justify-content: center;
  border-color: #ccc;
}
.articles{
  border-color: #ccc;
  text-align: center;
  width: 40%;
  font-size: 32rpx;
  border-bottom-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
  height: 60rpx;
  display: flex;
  align-items:center ;
  justify-content: center;
}
.blogBlock{
  width: 100%;
  overflow: hidden;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
}
.baseBlog{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.detail{
  font-size: 24rpx;
  display: flex;
}
.nature{
  margin-right: 20rpx;
}
.visitors,.praise,.forward{
  display: flex;
}
.visitors image,.praise image,.forward image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}
.baseline{
  width: 100%;
  font-size: 32rpx;
  text-align: center;
  padding: 40rpx 0;
}
/*文集模块  */
.classify{
  margin-top: 280rpx;
}
.classifyBlock{
  background: #F1F1F1; 
}
.creat{
  border: 2rpx solid #eee;
  width: 40%;
  margin-top: 20rpx;
  padding: 5rpx 0;
  margin-bottom: 20rpx;
  background: #F1F1F1;
  color: #000;
  font-size: 32rpx;
}
.creatSonBox{
  padding: 10rpx;
}
.creatSon{
  width: 35%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
  outline: none;
  background: #F9F9F9;
  color: #000;
  font-size: 28rpx;
}
button::after{
  border: none;
}
.hoverClass{
  background: #ccc;
  color: #000;
}
.classAA{
  padding:40rpx 20rpx;
  position: relative; 
  border-top: 2rpx solid #eee;
}
