/*头像信息栏  */
.backToParent{
  width: 100%;
  height: 180rpx;
  background: #409eff;
  display: flex;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  align-items: center;
  align-content: center;
  justify-content: center;
  position: relative;
}
.backImg{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  margin-top: -20rpx;
}
.folderName{
  width: 550rpx;
  text-align: center;
  align-items: center;
  align-content: center;
  justify-content: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.topMenu{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
}
.userInfo{
  width: 100%;
  height: 180rpx;
  background: #409eff;
  display: flex;
  align-items: center;
}
.user-left{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: 20rpx;
}
.user-right{
  padding: 20rpx 0;
  margin-left: 30rpx;
}
.nickName{
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.progressBar{
  width: 200rpx;
}
.progressBar-mask{
  font-family: "微软雅黑";
  font-weight: lighter;
  background-Color: 409eff;
  width: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.capacity{
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
}
/*工具栏  */
.tools{
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  border-bottom: 2rpx solid #ccc; 
  background: #F9F9F9;
}
.tools view{
  width: 33%;
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.tools view image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
/*content  */
.content{
  margin-top: 264rpx;
}
/* 空文件夹提示 */
.mentionBlock{
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -200rpx;
  text-align: center;
  font-size: 32rpx;
  z-index: -1;
}
.fileBlocks{
  width: 100%;
  padding: 10rpx 0;
}
.folder{
  width: 100%;
  padding: 20rpx;
  border-bottom:2rpx solid #eee;
  display: flex;
  align-content: center;
  align-items: center;
  font-size: 32rpx;
}
.folderImg{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.fileName{
  width:550rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.createDate{
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #aaa;
}
.baseline{
  text-align: center;
  padding: 20rpx 0;
}
/*弹出层  */
.checkBox{
  padding-top: 30rpx;
}
.inputFileName{
  color: #000;
}