/*头像信息栏  */
.userInfo{
  width: 100%;
  height: 180rpx;
  background: #409eff;
  display: flex;
  align-items: center;
}
.user-left{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: 20rpx;
}
.user-right{
  padding: 20rpx 0;
  margin-left: 30rpx;
}
.nickName{
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.progressBar{
  width: 200rpx;
}
.progressBar-mask{
  font-family: "微软雅黑";
  font-weight: lighter;
  background-Color: 409eff;
  width: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.capacity{
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
}
/*工具栏  */
.tools{
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
   border-bottom: 2rpx solid #ccc; 
  background: #F9F9F9;
}
.tools view{
  width: 33%;
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.tools view image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
/*content  */
.fileBlocks{
  width: 100%;
  padding: 10rpx 0;
}
.folder{
  width: 100%;
  padding: 20rpx;
  border-bottom:2rpx solid #eee;
  display: flex;
  align-content: center;
  align-items: center;
  font-size: 32rpx;
}
.folderImg{
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}