.photoDetails{
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
  background: #000;
  position: relative;
}
.original{
  width: 300rpx;
  font-size: 28rpx;
}
.top{
  position: absolute;
  width: 100%;
  height: 100rpx;
  opacity: 0.5;
  top: 0;
  left: 0;
}
.photoName{
  color: #fff;
  text-align: center;
  width: 100%;
}
.bottom{
  position: absolute;
  width: 100%;
  height: 200rpx;
  color: #fff;
  bottom: 0;
  left: 0;
}