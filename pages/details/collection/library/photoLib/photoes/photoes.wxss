.hasNoPhoto{
  width: 400rpx;
  height: 400rpx; 
  text-align: center;
  margin: 50% auto;
}
.add{
  text-align: center;
  font-size: 150rpx;
  color: #409eff;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}
.empty{
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center; 
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  font-size: 32rpx;
  text-align: center;
}
.addPhotoes{
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}
button.addPhotoes-button{
  background: #409eff;
  color: #fff;
}
/*相片样式  */
.baseline{
  float: left;
  width: 100%;
  text-align: center;
}
.photoBlock{
  width: 31%;
  height: 240rpx;
  margin-left: 12rpx; 
  margin-top: 12rpx;
  float: left;
  position: relative;
  border-radius: 10rpx;
}
.photo{
  width: 100%;
  height: 240rpx; 
  border-radius: 10rpx;
}
.deleteIcon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}