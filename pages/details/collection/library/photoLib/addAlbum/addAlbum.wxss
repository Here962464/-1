form{
  display: flex;
}
.alignment{
  padding-top: 16rpx;
  margin-right: 20rpx;
}
.sure{
  color: #ff0055;
  padding-top: 20rpx;
  text-align: center;
  margin-left: -20rpx;
}
.box{
  background: #fff;
  width: 100%;
  padding: 10rpx 60rpx;
}
.fl{
  float: left;
}
.pad{
  display: flex;
  vertical-align: middle;
  padding-top: 20rpx;
  width: 100%;
}
.createAlbum{
  font-family: "微软雅黑";
  width: 100%;
  margin: 0 auto;
}
.albumName,.albumPsd,.albumDescrip{
  border: 2rpx solid #ccc;
  padding: 6rpx 20rpx;
  border-radius: 10rpx;
}
.placeholder-style{
  color: #ff0055;
}
.newTips{
  width: 480rpx;
  margin-bottom: 20rpx;
}
.newTips-item{
  padding-top: 20rpx;
  padding-left: 10rpx;
  margin: 0 0 10rpx 10rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: rgb(236, 245, 255);
  color: rgb(64, 158, 255);
  border: 2rpx solid rgb(202, 228, 255); 
}
.warnText{
  display: flex;
  font-size: 28rpx;
  width: 500rpx;
  height: 30rpx;
  margin: 0 auto;
  color: rgb(245, 108, 108);
  padding-top: 10rpx;
}
.warnText image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.addTips{
  width: 170rpx;
  color: #aaa;
  margin-left: 10rpx;
  border: 2rpx solid #ccc;
  background: #fff;
  font-size: 28rpx;
}
.tipsContent{
  width: 150rpx;
  font-size: 28rpx;
  height: 70rpx;
  border-radius: 8rpx;
  padding-left: 20rpx;
  border: 2rpx solid rgb(202, 228, 255);
}
.button-hover{
  background: rgb(236, 245, 255);
  color: rgb(64, 158, 255);
  border: 2rpx solid rgb(202, 228, 255);
}
.delete{
  width: 30rpx;
  height: 50rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: inline-block;
  color: rgb(64, 158, 255);
}
.albumTip{
  height: 50rpx;
  display: inline-block;
  text-align: center;
}
.floor4{
  margin: 20rpx 0;
}
.psdProtection{
  padding: 16rpx 0;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.albumPsd{
  background: #eee;
  font-size: 28rpx;
  width: 250rpx; 
}
.albumDescrip{
  width: 440rpx;
  height: 140rpx;
}
.floor5{
  height: 180rpx;
}
.floor6{
  width: 100%;
  height: 300rpx;
}
.cover{
  height: 66rpx;
  line-height: 66rpx;
  padding: 10rpx;
  border-radius: 8rpx;
  background: rgb(236, 245, 255);
  color: rgb(64, 158, 255);
  border: 2rpx solid rgb(202, 228, 255);
}
.uploadImg{
  width: 360rpx;
  height: 280rpx;
  border: 2rpx dashed #ccc;
  margin: 0 10rpx;
}
.floor7{
  width: 400rpx;
  height: 100rpx;
  margin: 10rpx auto;
}
.floor7 .cancle{
  margin-left: -40rpx;
  padding: 0 40rpx;
}
.floor7 .submit{
  padding: 0 40rpx;
  color: #fff;
  margin-left: 40rpx;
  background: #409eff;
}