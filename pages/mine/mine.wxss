/*公共样式  */
.home-contain{
  width: 100vw;
  height: 100vh;
  background: linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -o-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -ms-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -moz-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -webkit-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  color: #333;
  padding-top: 10rpx;
}
.title-wrapper{
  display: flex;
  display: -webkit-flex;
  width: 90%;
  height: 150rpx;
  margin: 180rpx auto 40rpx;
  /* background: yellowgreen; */
}
.logo-wrapper{
  width: 150rpx;
}
.logo-wrapper image{
  width: 100%;
  height: 100%;
}
.title{
  flex: 1;
  color: #333;
}
.title1{
    line-height: 90rpx;
    font-size: 60rpx;
    font-weight: bold;
    text-indent: 1em;
}
.title2{
    line-height: 60rpx;
    text-align: right;
    font-size: 50rpx;
    font-family: '华文行楷';
}
.introduciton-wrapper{
  width: 70%;
  margin: 100rpx auto 0;
  line-height: 100rpx;
  font-size: 60rpx;
  font-family: "华文行楷";
}
.intro2{
  text-align: right;
}
.logIn{
  margin-top: 200rpx;
}
.logIn button{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #4093ff;
  color: #fff;
}