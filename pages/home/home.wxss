/* pages/home/home.wxss */
.home-contain{
  width: 100vw;
  height: 100vh;
  background: linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -o-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -ms-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -moz-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  background: -webkit-linear-gradient(top , rgba(238, 1, 49, 0) , rgba(28, 105, 245, 0.16) 92%);
  color: #333;
  padding-top: 10rpx;
}
.title-wrapper{
  display: flex;
  display: -webkit-flex;
  width: 90%;
  height: 150rpx;
  margin: 80rpx auto 40rpx;
  /* background: yellowgreen; */
}
.logo-wrapper{
  width: 150rpx;
}
.logo-wrapper image{
  width: 100%;
  height: 100%;
}
.title{
  flex: 1;
  color: #333;
}
.title1{
    line-height: 90rpx;
    font-size: 60rpx;
    font-weight: bold;
    text-indent: 1em;
}
.title2{
    line-height: 60rpx;
    text-align: right;
    font-size: 50rpx;
    font-family: '华文行楷';
}
.des-wrapper{
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 40rpx;
}
.des-wrapper .des-p{
  display: block;
  text-indent: 2em;
  line-height: 50rpx;
  margin: 10rpx 0;
}
.des-title{
  font-weight: bold;
  font-size: 1.2em;
}

